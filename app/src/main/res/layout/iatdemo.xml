<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1296db">

        <ImageView
            android:id="@+id/back_to_zhushou"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="语音翻译"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="center">
    <Spinner
        android:id="@+id/speak_languages_s"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/speaklanguages"/>
</LinearLayout>


        <TextView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#ddd"
            android:layout_marginRight="3dp"
            android:gravity="center" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/to_chage" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:background="#ddd"
            android:gravity="center" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="center">
    <Spinner
        android:id="@+id/chose_languages_s"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/chose_languages"/>
</LinearLayout>

    </LinearLayout>


    <ListView
        android:background="#eee"
        android:id="@+id/comlist1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:cacheColorHint="#00000000"
        android:layout_weight="1"
        android:divider="#cccccc00"
        android:listSelector="#00000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iat_recognize"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/yuyin_blue"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/iat_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:hint="输入需要翻译的内容"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fanyiBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1296db"
            android:gravity="center"
            android:text="查询"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>