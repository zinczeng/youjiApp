<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_to_biaoti"
            android:layout_margin="10dp"
            android:background="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="游记时光"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:onClick="wancheng"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="完成"
            android:textColor="#0000FF"
            android:textSize="22sp"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:gravity="top|left"
            android:hint="用游记记录今天美好的时光吧..."
            android:id="@+id/youjiwenzi"
            android:maxLength="255"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/shownan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="可输入 255 字"/>
        <com.example.zx.gridimageview.GridImageView
            android:id="@+id/gridImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <biaoqian.FlowLayout
        android:id="@+id/d_flowlayout"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="提示"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:text="1.图片最多上传三张哦。"/>
</LinearLayout>