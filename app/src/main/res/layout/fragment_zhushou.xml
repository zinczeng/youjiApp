<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1296db"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="助 手"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </LinearLayout>
<LinearLayout
    android:id="@+id/shou_weatherPhoto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/weather_bg_duoyun"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/city_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#fff"
                android:id="@+id/show_city"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="请选择城市"
                android:textSize="18sp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/right_white"/>
        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/min_wendu"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text=""
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#1296db"/>


            <TextView
                android:id="@+id/tv_hengxian"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:background="#dbeacc"/>

            <TextView
                android:id="@+id/max_wendu"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text=""
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="#FF0000"/>
        </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="30dp">
<TextView
    android:id="@+id/tianqi_tv"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:text="天气:"
    android:textColor="#fff"
    android:textSize="18sp"
    android:gravity="center"/>
    <TextView
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text=""
        android:textColor="#fff"
        android:id="@+id/weathera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shangci"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="上次更新："
                android:textColor="#fff"
                android:textSize="18sp"/>
            <TextView
                android:textColor="#fff"
                android:id="@+id/city_time"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/dian"
                android:visibility="gone"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="，"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/city_riqi"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:textColor="#fff"
                android:id="@+id/city_week"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=""
                android:textSize="18sp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/chose_beiwanglu"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/beiwanglu"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="备忘录"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/chose_fanyi"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fanyi"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="翻  译"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/chose_ditu"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ditu"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="地  图"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/chose_huilv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/huilv"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="汇  率"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>